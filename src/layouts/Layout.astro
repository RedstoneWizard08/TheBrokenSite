---
import BuildInfo from "../components/BuildInfo.astro";
import ChangelogUI from "../components/ChangelogUI.astro";
import Header from "../components/Header.astro";
import UnsafeUI from "../components/UnsafeUI.astro";
import Sidebar from "../components/Sidebar.astro";
import BaseHead from "../components/BaseHead.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead />
    </head>
    <body>
        <UnsafeUI transition:persist />
        <ChangelogUI transition:persist />
        <Header transition:persist />

        <div class="w-full h-full flex flex-col items-start justify-start">
            <div
                class="flex flex-col md:flex-row items-start justify-start w-full h-full p-4 space-y-4 md:space-y-0 md:space-x-4"
            >
                <Sidebar transition:persist />

                <div class="w-full h-full">
                    <slot />
                    <div class="w-full h-24"></div>
                </div>
            </div>

            <BuildInfo transition:persist />
        </div>
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
        background-color: black;
        color: white;
    }
</style>
